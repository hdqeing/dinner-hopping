generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model participant {
  participant_id  Int       @id @default(autoincrement())
  applicant_name  String    @db.VarChar(64)
  applicant_email String    @unique(map: "applicant_email") @db.VarChar(128)
  friend_name     String?   @db.VarChar(64)
  friend_email    String?   @db.VarChar(128)
  phonenumber     String?   @db.VarChar(45)
  vegan           Boolean
  vegetarian      Boolean
  english_speaker Boolean
  german_speaker  Boolean
  street          String?   @db.VarChar(45)
  house_number    Int?
  host            Boolean
  appetizer       Boolean
  main_course     Boolean
  dessert         Boolean
  comment         String?   @db.VarChar(150)
  verified        Boolean   @default(false)
  paid            Boolean   @default(false)
  create_time     DateTime  @default(now()) @db.Timestamp(0)
  update_time     DateTime? @db.Timestamp(0)
  is_deleted      Boolean   @default(false)

  @@index([friend_email], map: "friend_email")
}
